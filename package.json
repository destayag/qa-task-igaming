{
  "name": "spinbet-stage-cypress-qa",
  "version": "1.0.0",
  "private": true,
  "description": "Cypress + TypeScript E2E suite for SpinBet Stage registration and casino search.",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:smoke": "cypress run --env grepTags=smoke",
    "cy:regression": "cypress run --env grepTags=regression",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "cypress": "^13.15.0",
    "eslint": "^9.9.0",
    "@eslint/js": "^9.9.0",
    "typescript": "^5.5.4",
    "@cypress/grep": "^4.1.1",
    "prettier": "^3.3.3"
  }
}
